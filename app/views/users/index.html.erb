<h2>Users</h2>

<table class="primary">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, profile_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_profile_path, class: 'button' %>
