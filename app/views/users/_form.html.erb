<%= form_for(@user, url: @user.new_record? ? profiles_path : profile_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %>
  </div>
  <% if current_user.admin %>
    <div class="field">
      <%= f.label :admin %><br>
      <%= f.check_box :admin %>
    </div>
  <% end %>
  
  <% if current_user.admin %>
    <div>
      <%= f.label :groups %>
      <%= collection_check_boxes(:user, :group_ids, Group.all, :id, :name) %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
