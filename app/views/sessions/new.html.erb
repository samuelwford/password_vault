<h2>Log In</h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email, nil, class: 'control-label' %>
    <%= text_field_tag :email, params[:email], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: 'control-label' %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <p><%= link_to "Forgot password?", new_password_reset_path %></p>
  <div class="form-group">
    <%= label_tag :remember_me, nil, class: 'control-label' %>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>
  <div class="form-group"><%= submit_tag "Log In", class: 'btn btn-default' %></div>
<% end %>
