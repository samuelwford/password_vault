<%= form_for @account, html: { class: 'form-horizontal' } do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-6'>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :account_name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-6'>
      <%= f.text_field :account_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class='col-sm-6'>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group, class: 'col-sm-2 control-label' %>
    <div class='col-sm-6'>
      <%= f.collection_select :group_id, Group.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_area :notes, rows: "5", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
